# Options +FollowSymLinks +ExecCGI

RewriteEngine On
RewriteBase /~maxs

RewriteRule ^$ dispatch.cgi
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ dispatch.cgi/$1 [L]

